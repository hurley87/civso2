
<%= render 'pages/home' %>

<br />

<div class="text-center">
  <h3> <%= will_paginate @posts %> </h3>
</div>

<br />



<div id="projects" class="transitions-enabled">
    <% @projects.each do |project| %>
    <div class="box panel panel-default">
        <%= project.headline %>
        <%= link_to image_tag(project.image.url(:medium)), project %>
        <div class="panel-body">
        
        <%= project.user.email if project.user %><br />
        <%= project.location %><br />
        <%= project.project_on %><br />
        <%= project.project_end%><br />
        <% if project.user == current_user %>
        <%= link_to edit_project_path(project) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>